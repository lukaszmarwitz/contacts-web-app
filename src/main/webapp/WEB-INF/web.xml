<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Contacts Web App</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.wooky.web.servlets.ContactList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>index.html</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>com.wooky.web.servlets.Error</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error.html</url-pattern>
    </servlet-mapping>
    <error-page>
        <location>/error.html</location>
    </error-page>
    <data-source>
        <name>java:ds/contacts-app</name>
        <class-name>com.mysql.cj.jdbc.MysqlDataSource</class-name>
        <!-- DOCKERS -->
        <!--<url>jdbc:mysql://db:3306/test</url>-->
        <!-- LOCAL -->
        <url>jdbc:mysql://0.0.0.0:6603/test</url>
        <user>root</user>
        <password>pass123</password>
    </data-source>
</web-app>
